pro_abpro_c = loadpdb ../pro/pro_ab-pro_c.pdb
pro_ab = loadpdb ../pro/pro_ab.pdb
pro_c = loadpdb ../pro/pro_c.pdb
set default PBRadii mbondi2
saveamberparm pro_abpro_c pro_ab-pro_c.prmtop pro_ab-pro_c.inpcrd
saveamberparm pro_ab pro_ab.prmtop pro_ab.inpcrd
saveamberparm pro_c pro_c.prmtop pro_c.inpcrd

charge pro_abpro_c
solvatebox pro_abpro_c TIP3Ppro_bOX 12.0
saveamberparm pro_abpro_c pro_ab-pro_c_solvated.prmtop pro_ab-pro_c_solvated.inpcrd
quit
