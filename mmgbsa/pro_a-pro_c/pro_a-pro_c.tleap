pro_apro_c = loadpdb ../pro/pro_a-pro_c.pdb
pro_a = loadpdb ../pro/pro_a.pdb
pro_c = loadpdb ../pro/pro_c.pdb
set default PBRadii mbondi2
saveamberparm pro_apro_c pro_a-pro_c.prmtop pro_a-pro_c.inpcrd
saveamberparm pro_a pro_a.prmtop pro_a.inpcrd
saveamberparm pro_c pro_c.prmtop pro_c.inpcrd

charge pro_apro_c
solvatebox pro_apro_c TIP3Ppro_bOX 12.0
saveamberparm pro_apro_c pro_a-pro_c_solvated.prmtop pro_a-pro_c_solvated.inpcrd
quit
